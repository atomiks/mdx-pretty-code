{
  "name": "rehype-pretty-code",
  "version": "0.9.8",
  "description": "Beautiful code for your MD/MDX docs.",
  "main": "./dist/rehype-pretty-code.cjs",
  "module": "./dist/rehype-pretty-code.js",
  "workspaces": ["./word-highlighter-playground"],
  "type": "module",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/rehype-pretty-code.js",
      "require": "./dist/rehype-pretty-code.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist/", "index.d.ts"],
  "scripts": {
    "build": "npx rollup -c",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "lint": "rome check *.{js,ts,json} src test",
    "lint:fix": "rome format *.{js,ts,json} src test --write",
    "typecheck": "tsc --noEmit",
    "playground": "npm run dev --workspace=word-highlighter-playground",
    "playground-website": "npm run dev --workspace=website",
    "release": "bumpp package.json --commit --push --tag",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "NODE_ENV='production' npm run build"
  },
  "jest": {
    "transform": {}
  },
  "engines": {
    "node": ">=16"
  },
  "author": "",
  "license": "MIT",
  "repository": "github:atomiks/rehype-pretty-code",
  "homepage": "https://rehype-pretty-code.netlify.app",
  "peerDependencies": {
    "shiki": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@types/jest": "^29.5.2",
    "prettier": "^2.5.1",
    "@types/node": "^20.3.1",
    "bumpp": "^9.1.1",
    "hast-util-to-html": "^8.0.3",
    "hast-util-to-string": "^2.0.0",
    "jest": "^27.4.5",
    "jest-file-snapshot": "^0.5.0",
    "jest-mock": "^27.5.1",
    "mdast-util-to-hast": "^12.1.0",
    "rehype-parse": "^8.0.3",
    "remark": "^14.0.2",
    "rollup": "^2.60.2",
    "rome": "12.1.3",
    "shiki": "^0.14.0",
    "typescript": "^4.5.2",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.0.0"
  },
  "dependencies": {
    "@types/hast": "^2.0.0",
    "hash-obj": "^4.0.0",
    "parse-numeric-range": "^1.3.0"
  }
}
