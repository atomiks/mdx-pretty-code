{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "strictNullChecks": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node", "bun"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "include": ["scripts"],
  "files": ["biome.json", "reset.d.ts", ".changeset/changelog.cjs"],
  "exclude": ["node_modules"]
}
