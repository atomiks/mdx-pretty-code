{
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node", "bun"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "scripts", "index.d.ts"],
  "exclude": ["node_modules"]
}
