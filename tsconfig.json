{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node", "bun"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "downlevelIteration": true
  },
  "include": ["scripts"],
  "files": ["biome.json"],
  "exclude": ["node_modules"]
}
