{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "types": [
      "bun",
      "node"
    ],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "downlevelIteration": true
  },
  "include": [
    "src",
    "test",
    "scripts"
  ],
  "files": [
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
