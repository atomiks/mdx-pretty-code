{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "biome.jsonc"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        ".astro/**",
        ".svelte-kit/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {},
    "typecheck": {},
    "check-package": {}
  }
}
